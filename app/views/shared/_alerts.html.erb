<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Alert", image: :warning, sticky: false, time: 2000 ) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Error", image: :error, sticky: false, time: 2000 ) %>
<% else %>
  <%= js add_gritter(flash[:notice], image: :notice, sticky: false, time: 2000 ) %>
<% end %>
