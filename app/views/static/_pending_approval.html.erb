<% pending_approvals.each do |pa| %>
  <div class="homepage-block col-md-3">
    <h4>
      <%= pa.user.full_name %>
    </h4>
    <hr>
    <p>
      <span class="pending-details">Date Submitted:</span> <%= pa.date %>
    </p>
    <p>
      <span class="pending-details">Overtime requested:</span> <%= pa.overtime_request %> hours
    </p>
    <p>
      <span class="pending-details">Rationale:</span> <%= truncate(pa.rationale, length: 42) %>
    </p>
    <div class="row">
      <div class="col-md-6 column">
        <%= link_to "Approve", approve_post_path(pa), class: "btn btn-success btn-block mobile-button-margin", id: "approve_#{pa.id}" %>
      </div>
      <div class="col-md-6 column">
        <%= link_to "Review", edit_post_path(pa), class: "btn btn-warning btn-block mobile-button-margin" %>
      </div>
    </div>
  </div>
<% end %>
