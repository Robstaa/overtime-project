<% if pending_audit_confirmations.count > 0 %>
  <% pending_audit_confirmations.each do |pending_confirmation| %>
    <%= link_to "I confirm that I did not perform any overtime for the week of #{pending_confirmation.start_date.strftime('%A, %e.%m.%Y')} - #{(pending_confirmation.start_date + 6.days).strftime('%A, %e.%m.%Y')}",
                confirm_audit_log_path(pending_confirmation), {
                class: "btn btn-warning btn-block btn-lg",
                id: "approve_#{pending_confirmation.id}",
                style: "margin-bottom:4px;white-space: normal;",
                data: { confirm: "If you did not perform any overtime during the week of the #{pending_confirmation.start_date.strftime('%A, %e.%m.%Y')} - #{(pending_confirmation.start_date + 6.days).strftime('%A, %e.%m.%Y')}, please continue. Otherwise cancel and log your overtime."}}
                %>
  <% end %>
<% else %>
  <h4 class="text-center">No pending overtime logs to approve</h4>
<% end %>
