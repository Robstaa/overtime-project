<!DOCTYPE html>
<html>
  <head>
    <title>OvertimeProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <%= render 'shared/navbar' %>
          <%= yield %>
        </div>
      </div>
    </div>

    <%= js add_gritter(flash[:notice], image: :notice, sticky: false, time: 2000 ) %>

  </body>
</html>
