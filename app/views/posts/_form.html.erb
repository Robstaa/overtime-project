<%= form_for @post do |f| %>
  <form role="form">
    <div class="form-group">
      <%= f.label(:date, "Date") %>
      <%= f.date_field(:date, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= f.label(:rationale, "Rationale") %>
      <%= f.text_area(:rationale, size: "60x12", class: "form-control") %>
    </div>
      <%= f.submit(submit_type, class: "btn btn-primary btn-block") %>
  </form>
<% end %>
