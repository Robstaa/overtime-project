<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= truncate(post.rationale) %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <strong><%= post.status.capitalize %></strong>
  </td>
  <td>
    <!-- ID is created for the post.spec -->
    <% if post.status != "submitted" %>
      <%= link_to "Edit", edit_post_path(post), id: "edit_#{post.id}" %>
    <% end %>
  </td>
  <td>
    <!-- ID is created for the post.spec -->
    <!-- data: {confirm: "Are you sure, that you want to delete this post?"} -->
    <%= link_to "Delete", post_path(post), method: :delete, id: "delete_#{post.id}" %>
  </td>
</tr>
