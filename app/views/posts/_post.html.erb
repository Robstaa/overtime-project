<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= "#{post.overtime_request} hours" %>
  </td>
  <td>
    <%= truncate(post.rationale) %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= status_label(post.status) %>
  </td>
  <td>
    <!-- ID is created for the post.spec __________ policy is a method from pundit-->
      <%= link_to "Edit", edit_post_path(post), id: "edit_#{post.id}" if policy(post).update? %>
  </td>
  <td>
    <!-- ID is created for the post.spec -->
    <!-- data: {confirm: "Are you sure, that you want to delete this post?"} -->
    <%= link_to "Delete", post_path(post), method: :delete, id: "delete_#{post.id}" %>
  </td>
</tr>
