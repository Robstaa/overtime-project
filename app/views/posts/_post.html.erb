<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.date.strftime("%e.%m.%Y") %>
  </td>
  <td>
    <%= "#{post.overtime_request} hours" %>
  </td>
  <td>
    <%= link_to truncate(post.rationale), post_path(post) %>
  </td>
  <td>
    <%=post.user.full_name %>
  </td>
  <td>
    <%= status_label(post.status) %>
  </td>
  <td>
    <!-- ID is created for the post.spec __________ policy is a method from pundit-->
    <% if policy(post).update? %>
      <%= link_to edit_post_path(post), html_options = {id: "edit_#{post.id}"} do %>
        <%= fa_icon "edit", class: "index-icon" %>
      <% end %>
    <% end %>
  </td>
  <td>
    <!-- ID is created for the post.spec -->
    <!-- data: {confirm: "Are you sure, that you want to delete this post?"} -->
      <%= link_to(post_path(post), method: :delete) do  %>
        <%= fa_icon "trash", class: "index-icon", id: "delete_#{post.id}" %>
      <% end %>
  </td>
</tr>
